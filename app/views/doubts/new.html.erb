<div class="card">
  <div class="card-body">
    <h5 class="card-title">Raise Doubt</h5>
    <%= form_for(@doubt) do |f| %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Ask Doubt", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
